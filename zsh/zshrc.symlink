#!/bin/zsh

if [[ -a ~/.localrc ]]; then
	source ~/.localrc
fi

if [ -x "$(command -v tmux)" ] && [[ (-n "${DISPLAY}") || "$(uname)" == "Darwin" ]] && [ -z "${TMUX}" ]; then
	tmux attach || tmux >/dev/null 2>&1
fi

export CLICOLOR=1
PROMPT="[%n@%m %~]%# "

if [[ -d "$HOME/bin" ]]; then
	export PATH="$HOME/bin:$PATH"
fi

setopt interactivecomments

